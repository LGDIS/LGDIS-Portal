<section id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'refinery.admin.search', :query => params[:search]) %></h2>
  <% end %>
  <div class='pagination_container'>
    <% if @marquees.any? %>
      <%= will_paginate @marquees %>
      <ul>
        <%= render :partial => "marquee", :collection => @marquees %>
      </ul>
      <%= will_paginate @marquees %>
    <% else %>
      <p>
        <% unless searching? %>
          <strong>
            <%= t('.no_items_yet') %>
          </strong>
        <% else %>
          <%= t('no_results', :scope => 'refinery.admin.search') %>
        <% end %>
      </p>
    <% end %>
  </div>
</section>
<aside id='actions'>
  <ul>
    <li>
      <%= link_to t('.create_new'), refinery.new_marquees_admin_marquee_path,
                   :class => "add_icon" %>
    </li>
  </ul>
</aside>
